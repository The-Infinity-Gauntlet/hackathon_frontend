{
  "compilerOptions": {
    "target": "ESNext",
    "useDefineForClassFields": true,
    "module": "ESNext",
    "moduleResolution": "bundler",
    "isolatedModules": true,
    "strict": true,
    "jsx": "preserve",
    "jsxFactory": "h",
    "jsxFragmentFactory": "Fragment",
    "sourceMap": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "paths": {
      "@/*": ["src/*"],
      "@templates/*": ["src/@templates/*"],
      "@templates": ["src/@templates"],
      "@core/*": ["src/@core/*"],
      "@core": ["src/@core"],
      "@images/*": ["./src/@templates/assets/images/*"],
      "@styles/*": ["./src/@templates/assets/styles/*"]
    },
    "lib": ["DOM", "ESNext"],
    "emitDecoratorMetadata": true,
    "skipLibCheck": true,
    "baseUrl": ".",
    "experimentalDecorators": true,
    "types": [],
    "allowJs": true,
    "strictNullChecks": true,
    "noUnusedLocals": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": [
    "src/**/*",
    "src/**/*.vue",
    "src/@core/components/generic/utils/jspdf-autotable.d.ts",
    "./src/**/*",
    "./src/**/*.vue",
    "./src/themeConfig.ts"
  ],
  "exclude": ["dist", "node_modules"],
  "references": [
    {
      "path": "./tsconfig.node.json"
    }
  ]
}
